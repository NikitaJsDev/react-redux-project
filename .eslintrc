{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "semi": 2,
    "arrow-body-style": [
      2,
      "as-needed"
    ],
    "no-duplicate-imports": [
      2
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "react/prop-types": [0],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  }
}
